pipeline {
    agent any
    triggers {
        GenericTrigger(
            genericVariables:[
                [key: 'action', value: '$.action', defaultValue: ''],
                [key: 'base_repo', value: '$.pull_request.base.ref', defaultValue: '']
            ],
            token: 'genericToken',
            printContributedVariables: true,
            printPostContent: true,
            causeString: 'action is $action \n base_repo is $base_repo',
            regexpFilterText: '$action@@$base_repo',
            regexpFilterExpression: '^opened@@master'
        )
    }
    stages {
        stage('if_aborted') {
            when {
                allOf {
                    branch 'master';
                    expression {
                        return '$action' == 'opened';
                    }
                }
            }
            steps {
                script {
                    currentBuild.result = SUCCESS
                    return
                }
            }
        }
        stage('Build') {
            steps {
                echo 'build master branch'
                sh './scripts/build.sh'
            }
        }
        stage('API_Test'){
            when {
                allOf{
                    expression {
                        return env.BRANCH_NAME != 'master';
                    }
                    expression {
                        return '$action' == 'opened';
                    }
                }
            }
            steps{
                echo 'APT test Area...'
                bat 'call scripts/test_JMeter.bat'
            }
        }
    }
    post{
        always{
            sh './scripts/kill-service.sh'
        }
        success{
            echo 'This workflow is successful!'
        }
        failure{
            echo 'This workflow is failed!'
        }
    }
}