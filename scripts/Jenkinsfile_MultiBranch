pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'build master branch'
            }
        }
        stage('API_Test') {
            steps{
                echo 'APT test Area...'
            }
        }
    }
    post{
        always{
            echo 'This will always be executed!'
        }
        success{
            echo 'This workflow is successful!'
        }
        failure{
            echo 'This workflow is failed!'
        }
    }
}