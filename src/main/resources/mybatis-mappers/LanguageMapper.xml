<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.admin.server.dao.LanguageDao">

	<sql id="where">
		<where>
			<if test="params.createTime != null and params.createTime != ''">
				and createTime = #{params.createTime} 
			</if>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.k != null and params.k != ''">
				and k = #{params.k} 
			</if>
			<if test="params.updateTime != null and params.updateTime != ''">
				and updateTime = #{params.updateTime} 
			</if>
			<if test="params.val != null and params.val != ''">
				and val = #{params.val} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from language t
		<include refid="where" />
	</select>

	<select id="list" resultType="Language">
		select * from language t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update language t
		<set>
			<if test="createTime != null">
				createTime = #{createTime}, 
			</if>
			<if test="k != null">
				k = #{k}, 
			</if>
			<if test="updateTime != null">
				updateTime = #{updateTime}, 
			</if>
			<if test="val != null">
				val = #{val}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
