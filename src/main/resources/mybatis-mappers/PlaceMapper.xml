<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.admin.server.dao.PlaceDao">

    <sql id="where">
        <where>
            <if test="params.id != null and params.id != ''">
                and id = #{params.id}
            </if>
            <if test="params.place != null and params.place != ''">
                and place = #{params.place}
            </if>
            <if test="params.createTime != null and params.createTime != ''">
                and create_time = #{params.createTime}
            </if>
            <if test="params.updateTime != null and params.updateTime != ''">
                and update_time = #{params.updateTime}
            </if>
            <if test="params.createUser != null and params.createUser != ''">
                and create_user = #{params.createUser}
            </if>
            <if test="params.updateUser != null and params.updateUser != ''">
                and update_user = #{params.updateUser}
            </if>
        </where>
    </sql>

    <select id="count" resultType="int">
        select count(1) from place t
        <include refid="where"/>
    </select>

    <select id="list" resultType="Place">
        select * from place t
        <include refid="where"/>
        ${params.orderBy} limit #{offset}, #{limit}
    </select>

    <update id="update">
        update place t
        <set>
            <if test="place != null">
                place = #{place},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="updateUser != null">
                update_user = #{updateUser},
            </if>
        </set>
        where t.id = #{id}
    </update>

    <select id="selectPlacePage" resultType="Place">
        select * from place t
        <where>
            <if test="place !=null">
                t.place like  CONCAT('%',#{place},'%')
            </if>
        </where>
        order by t.create_time desc
    </select>

    <!--查询下拉-->
    <select id="selectPlaces" resultType="java.util.Map">
        select id placeId,place from place
    </select>
</mapper>