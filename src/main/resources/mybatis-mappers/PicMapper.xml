<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.admin.server.dao.PicDao">

	<sql id="where">
		<where>
			<if test="params.content != null and params.content != ''">
				and content = #{params.content} 
			</if>
			<if test="params.createTime != null and params.createTime!= ''">
				and create_time = #{params.createTime} 
			</if>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.k != null and params.k != ''">
				and k = #{params.k} 
			</if>
			<if test="params.pic != null and params.pic != ''">
				and pic = #{params.pic} 
			</if>
			<if test="params.updateTime != null and params.updateTime != ''">
				and update_time = #{params.updateTime} 
			</if>
			<if test="params.version != null and params.version != ''">
				and version = #{params.version} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from pic t
		<include refid="where" />
	</select>
	
	<select id="webList" resultType="Pic">
		select * from pic t
		<include refid="where" />
		order by id desc
		limit #{offset}, #{limit}
	</select>	

	<select id="list" resultType="Pic">
		select * from pic t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update pic t
		<set>
			<if test="content != null">
				content = #{content}, 
			</if>
			<if test="createTime != null">
				create_time = #{createTime}, 
			</if>
			<if test="k != null">
				k = #{k}, 
			</if>
			<if test="pic != null">
				pic = #{pic}, 
			</if>
			<if test="updateTime != null">
				update_time = #{updateTime}, 
			</if>
			<if test="version != null">
				version = #{version}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
