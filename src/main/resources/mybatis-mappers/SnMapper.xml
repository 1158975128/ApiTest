<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.admin.server.dao.SnDao">

    <sql id="where">
        <where>
            <if test="params.id != null and params.id != ''">
                and id = #{params.id}
            </if>
            <if test="params.snId != null and params.snId != ''">
                and snId = #{params.snId}
            </if>
            <if test="params.pcId != null and params.pcId != ''">
                and pcId = #{params.pcId}
            </if>
            <if test="params.machineId != null and params.machineId != ''">
                and machineId = #{params.machineId}
            </if>
            <if test="params.location != null and params.location != ''">
                and location = #{params.location}
            </if>
            <if test="params.createTime != null and params.createTime != ''">
                and createTime = #{params.createTime}
            </if>
            <if test="params.updateTime != null and params.updateTime != ''">
                and updateTime = #{params.updateTime}
            </if>

        </where>
    </sql>

    <select id="count" resultType="int">
        select count(1) from sn t
        <include refid="where"/>
    </select>
    
    <select id="webList" resultType="Sn">
        select * from sn t
        <include refid="where"/>
        order by id desc
        limit #{offset}, #{limit}
    </select>    

    <select id="list" resultType="Sn">
        select * from sn t
        <include refid="where"/>
        ${params.orderBy}
        limit #{offset}, #{limit}
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sn
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="snId != null">snId,</if>
            <if test="pcId != null">pcId,</if>
            <if test="machineId != null">machineId,</if>
            <if test="location != null">location,</if>
            createTime,
            updateTime,
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="snId != null">#{snId},</if>
            <if test="pcId != null">#{pcId},</if>
            <if test="machineId != null">#{machineId},</if>
            <if test="location != null">#{location},</if>
            NOW(),
            NOW(),
        </trim>
    </insert>

    <update id="update">
        update sn t
        <set>
            <if test="snId != null">
                snId = #{snId},
            </if>
            <if test="pcId != null">
                pcId = #{pcId},
            </if>
            <if test="machineId != null">
                machineId = #{machineId},
            </if>
            <if test="location != null">
                location = #{location},
            </if>
            <if test="createTime != null">
                createTime = #{createTime},
            </if>
            <if test="updateTime != null">
                updateTime = #{updateTime},
            </if>

        </set>

        where t.id = #{id}
    </update>

</mapper>
