<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.admin.server.dao.TestDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.username != null and params.username != ''">
				and username = #{params.username} 
			</if>
			<if test="params.score != null and params.score != ''">
				and score = #{params.score} 
			</if>
			<if test="params.time != null and params.time != ''">
				and time = #{params.time} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from test t
		<include refid="where" />
	</select>

	<select id="list" resultType="Test">
		select * from test t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update test t
		<set>
			
			<if test="username != null">
				username = #{username}, 
			</if>
			<if test="score != null">
				score = #{score}, 
			</if>
			<if test="time != null">
				time = #{time}, 
			</if>
			<if test="testId != null">
				testId = #{testId}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
