<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.admin.server.dao.LogDao">

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="machineId != null">machineId,</if>
            <if test="userId != null">userId,</if>
            <if test="msg != null">msg,</if>
            createTime,
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="machineId != null">#{machineId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="msg != null">#{msg},</if>
            NOW(),
        </trim>
    </insert>

    <sql id="where">
        <where>
            <if test="params.createTime != null and params.createTime != ''">
                and createTime = #{params.createTime}
            </if>
            <if test="params.id != null and params.id != ''">
                and id = #{params.id}
            </if>
            <if test="params.machineId != null and params.machineId != ''">
                and machineId = #{params.machineId}
            </if>
            <if test="params.msg != null and params.msg != ''">
                and msg = #{params.msg}
            </if>
            <if test="params.userId != null and params.userId != ''">
                and userId = #{params.userId}
            </if>

        </where>
    </sql>

    <select id="count" resultType="int">
        select count(1) from log t
        <include refid="where"/>
    </select>
    
    <select id="webList" resultType="Log">
        select * from log t
        <include refid="where"/>
        order by id desc
        limit #{offset}, #{limit}
    </select>     

    <select id="list" resultType="Log">
        select * from log t
        <include refid="where"/>
        ${params.orderBy}
        limit #{offset}, #{limit}
    </select>

    <update id="update">
        update log t
        <set>
            <if test="createTime != null">
                createTime = #{createTime},
            </if>
            <if test="machineId != null">
                machineId = #{machineId},
            </if>
            <if test="msg != null">
                msg = #{msg},
            </if>
            <if test="userId != null">
                userId = #{userId},
            </if>

        </set>

        where t.id = #{id}
    </update>

</mapper>
