<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.admin.server.dao.UserReportDao">
	<sql id="where">
			<where>	
			<if test="params.id != null and params.id != '' and params.id != 0">
				and id = #{params.id} 
			</if>
			<if test="params.uid != null and params.uid != ''">
				and uid = #{params.uid} 
			</if>
			<if test="params.eid != null and params.eid != ''">
				and eid = #{params.eid} 
			</if>
			<if test="params.rid != null and params.rid != ''">
				and rid = #{params.rid} 
			</if>
			<if test="params.val != null and params.val != ''">
				and val = #{params.val} 
			</if>
		</where>	
	</sql>	
				
	<select id="count" resultType="int">		
				select count(1) from user_report t		
				<include refid="where" />
	</select>
	
	<select id="listRF" resultType="UserReport">
		select * from user_report t
		<include refid="where" />
	</select>	
					
	<select id="list" resultType="UserReport">	
			select * from user_report t		
			<include refid="where" />		
			${params.orderBy}		limit #{offset}, #{limit}	
			</select>	
			
	<update id="update">		
			update user_report t		
		<set>			
			<if test="uid != null">
				uid = #{uid}, 
			</if>
			<if test="eid != null">
				eid = #{eid}, 
			</if>
			<if test="rid != null">
				rid = #{rid}, 
			</if>
			<if test="val != null">
				val = #{val}, 
			</if>
		</set>		where t.id = #{id}	
		</update>
	</mapper>