<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zw.admin.server.dao.TrainStatsDao">

    <sql id="where">
        <where>
            <if test="params.id != null and params.id != ''">
                and id = #{params.id}
            </if>
            <if test="params.user_id != null and params.user_id != ''">
                and user_id = #{params.userId}
            </if>
            <if test="params.machine_type != null and params.machine_type != ''">
                and machine_type = #{params.machineType}
            </if>
            <if test="params.train_time != null and params.train_time != ''">
                and train_time = #{params.trainTime}
            </if>
            <if test="params.train_distance != null and params.train_distance != ''">
                and train_distance = #{params.trainDistance}
            </if>
            <if test="params.trian_times != null and params.trian_times != ''">
                and trian_times = #{params.trianTimes}
            </if>
            <if test="params.train_days != null and params.train_days != ''">
                and train_days = #{params.trainDays}
            </if>
            <if test="params.force_times != null and params.force_times != ''">
                and force_times = #{params.forceTimes}
            </if>
            <if test="params.total_score != null and params.total_score != ''">
                and total_score = #{params.totalScore}
            </if>
        </where>
    </sql>

    <select id="count" resultType="int">select count(1) from train_stats t
        <include refid="where"/>
    </select>

    <select id="list" resultType="TrainStats">select * from train_stats t
        <include refid="where"/>
        ${params.orderBy} limit #{offset}, #{limit}
    </select>

    <update id="update">
    update train_stats t
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="machineType != null">
                machine_type = #{machineType},
            </if>
            <if test="trainTime != null">
                train_time = #{trainTime},
            </if>
            <if test="trainDistance != null">
                train_distance = #{trainDistance},
            </if>
            <if test="trainTimes != null">
                train_times = #{trainTimes},
            </if>
            <if test="trainDays != null">
                train_days = #{trainDays},
            </if>
            <if test="forceTimes != null">
                force_times = #{forceTimes},
            </if>
            <if test="totalScore != null">
                total_score = #{totalScore},
            </if>
            <if test="updateTime !=null">
                update_time = #{updateTime}
            </if>
        </set>
        where t.id = #{id}
    </update>

    <!--查询用户存档信息-->
    <select id="selectTrainStats" resultType="com.zw.admin.server.model.TrainStats">
        SELECT * from train_stats
        <where>
            user_id = #{userId}
            <if test="machineType !=null">
                and machine_type = #{machineType}
            </if>
        </where>
        order by update_time desc
    </select>

    <!--查询用户存档信息-->
    <delete id="deleteTrainStats" parameterType="com.zw.admin.server.model.TrainStats">
        delete from train_stats
        where
        user_id = #{userId} and machine_type = #{machineType}
    </delete>

</mapper>