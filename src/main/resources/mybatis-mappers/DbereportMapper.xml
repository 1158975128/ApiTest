<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.admin.server.dao.DbereportDao">

	<sql id="where">
		<where>
			<if test="params.content != null and params.content != ''">
				and content = #{params.content} 
			</if>
			<if test="params.date != null and params.date != ''">
				and date = #{params.date} 
			</if>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.image != null and params.image != ''">
				and image = #{params.image} 
			</if>
			<if test="params.mode != null and params.mode != ''">
				and mode = #{params.mode} 
			</if>
			<if test="params.result != null and params.result != ''">
				and result = #{params.result} 
			</if>
			<if test="params.time != null and params.time != ''">
				and time = #{params.time} 
			</if>
			<if test="params.userId != null and params.userId != ''">
				and user_id = #{params.userId} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from dbereport t
		<include refid="where" />
	</select>

	<select id="list" resultType="Dbereport">
		select * from dbereport t
		<include refid="where" />
		order by id desc
		<if test="limit != null and limit != 0">
		limit #{offset}, #{limit}
		</if>
	</select>

	<update id="update">
		update dbereport t
		<set>
			<if test="content != null">
				content = #{content}, 
			</if>
			<if test="date != null">
				date = #{date}, 
			</if>
			<if test="image != null">
				image = #{image}, 
			</if>
			<if test="mode != null">
				mode = #{mode}, 
			</if>
			<if test="result != null">
				result = #{result}, 
			</if>
			<if test="time != null">
				time = #{time}, 
			</if>
			<if test="user_id != null">
				user_id = #{userId}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
